<% provide :title, @user.name %>

<div class="row">
  <aside class="col text-center">
    <section class="user_info">
      <h2>
        <div class="avatar">
          <%= avatar @user %>
        </div>
        <%= @user.name %>
        <%= render "follow_form" if user_signed_in? %>
      </h2>
    </section>
    <aside class="col-md-4 shared">
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
  </aside>
</div>
