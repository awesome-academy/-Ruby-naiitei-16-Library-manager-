<% provide :title, t(".request_book") %>

<h1 class="text-center"><%= t ".request_book" %></h1>
<div class="row">
  <div class="book-request col-md-6 col-md-offset-3 px-5">
    <%= form_for @request, url: book_requests_path do |f| %>
      <div class="py-3">

        <div class="request-info">
          <div><%= t "requests.request.borrow_user" %>:
            <span class="nav-avatar">
            <%= avatar current_user %>
          </span>
            <%= current_user.name %>
          </div>
          <div>
            <%= t "books.book.name_book" %>: <span class="font-weight-bold"><%= link_to @book.name, @book %></span>
          </div>
          <div>
            <%= t "books.book.author" %>: <span class="font-weight-bold"><%= @book.author.name %></span>
          </div>
        </div>

        <div class="request-date">
          <div>
            <%= f.label t ".date_start" %>
            <%= Time.now.strftime(Settings.date_format) %>
          </div>
          <div>
            <%= f.label t ".date_end" %>
            <%= f.date_field :date_end, class: "w-75" %>
          </div>
        </div>
      </div>
      <%= f.submit t(".submit"), class: "btn btn-primary align-center create_account_button" %>
    <% end %>
  </div>
</div>
