<% provide :title, @user.name %>

<div class="row">
  <aside class="col text-center">
    <section class="user_info">
      <h2>
        <div class="avatar">
          <%  if @user.image.attached? %>
            <%= image_tag @user.display_image %>
          <% else %>
            <%= image_tag Settings.default_avatar %>
          <% end %>
        </div>
        <%= @user.name %>
      </h2>
    </section>
  </aside>
</div>
