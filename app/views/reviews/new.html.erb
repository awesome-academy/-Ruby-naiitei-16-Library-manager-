<div class="card-body">
  <div class="container bootstrap snippets bootdey">
    <div class="row">
      <div class="col-12">
        <div class="blog-comment">
          <h3 class="font-weight-bold text-info"><%= t ".reviews" %></h3>
        </div>
        <%= form_for [@reviewable, @review] do |f| %>
          <%= render "shared/errors", object: f.object %>
          <div class="form-group">
            <div class="form-group" id="star">
              <%= f.label :rate, t(".rate"), class:"col-lg-3 col-form-label font-weight-bold" %>
              <%= f.hidden_field :rate, id: :review_star %>
            </div>
            <div class="form-group row">
              <%= f.label :detail, t(".comment"), class:"col-md-3 col-form-label font-weight-bold" %>
              <div class="col-md-9">
                <%= f.text_area :detail, class: "form-control", rows: "8",
                    placeholder: t(".input") %>
              </div>
            </div>
          </div>
          <%= f.submit t(".submit"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
