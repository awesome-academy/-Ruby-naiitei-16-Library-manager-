<% provide :title, @title %>
<div class="row">
  <div class="col-md-4">
    <section class="user_info">
      <div class="avatar">
        <%  if @user.image.attached? %>
          <%= image_tag @user.display_image %>
        <% else %>
          <%= image_tag Settings.default_avatar %>
        <% end %>
      </div>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".view_profile"), @user %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </div>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= paginate @users, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
