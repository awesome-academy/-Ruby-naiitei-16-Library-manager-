<% provide :title, t("sessions.new.log_in") %>

<h1 class="text-center"><%= t "sessions.new.log_in" %></h1>
<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t "sessions.new.password" %>
      <%= f.password_field :password, class: "form-control" %>
      <div class="m-3">
        <%= f.submit t("sessions.new.log_in"), class: "btn btn-primary" %>
      </div>
    <% end %>
    <p><%= t "new_user?" %><%= link_to t("sign_up_now!"), new_user_registration_path %></p>
  </div>
</div>
