<% provide :title, t("users.new.sign_up") %>

<h1 class="text-center"><%= t "users.new.sign_up" %></h1>
<div class="row justify-content-center">
  <div class="col-6 px-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label t "users.new.name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label t "users.new.password" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label t "users.new.password_confirmation" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <br/>
      <div class="field">
        <%= f.label :avatar %>
        <span class="image">
          <%= f.file_field :image, accept: Settings.image_restricted_types %>
        </span>
      </div>
      <div class="m-3">
        <%= f.submit t("users.new.create_my_account"), class: "btn btn-primary align-center create_account_button" %>
      </div>
    <% end %>
  </div>
</div>
