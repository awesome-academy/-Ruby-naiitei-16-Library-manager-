<% provide :title, t(".sign_up") %>

<h1 class="text-center"><%= t ".sign_up" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 px-5">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label t ".name" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t ".password" %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label t ".password_confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.label :avatar %>
      <span class="image">
        <%= f.file_field :image, accept: Settings.image_restricted_types %>
      </span>
      <%= f.submit t(".create_my_account"), class: "btn btn-primary align-center create_account_button" %>
    <% end %>
  </div>
</div>
