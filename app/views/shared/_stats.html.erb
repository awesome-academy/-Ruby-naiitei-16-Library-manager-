<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_index_path(@user) do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t ".following", class: "following" %>
  <% end %>

  <%= link_to follower_index_path(@user) do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t ".followers", class: "following" %>
  <% end %>
</div>
